{
  "title": "[macOS] Use Caps Lock + Arrows to adjust media and volume",
  "rules": [
    {
      "description": "Change volume and tracks using arrow keys",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "optional": [
                "any"
              ]
            },
            "key_code": "left_arrow"
          },
          "to": [
            {
              "key_code": "rewind"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "caps_lock pressed",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "optional": [
                "any"
              ]
            },
            "key_code": "right_arrow"
          },
          "to": [
            {
              "key_code": "fast_forward"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "caps_lock pressed",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "optional": [
                "any"
              ]
            },
            "key_code": "up_arrow"
          },
          "to": [
            {
              "key_code": "volume_increment"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "caps_lock pressed",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "optional": [
                "any"
              ]
            },
            "key_code": "down_arrow"
          },
          "to": [
            {
              "key_code": "volume_decrement"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "caps_lock pressed",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "caps_lock pressed",
                "value": 1
              }
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "caps_lock pressed",
                "value": 0
              }
            }
          ]
        }
      ]
    }
  ]
}
